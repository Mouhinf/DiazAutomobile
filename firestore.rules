rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /cars/{carId} {
      allow read: if true; // Permet la lecture pour tout le monde
      allow write: if false; // Interdit l'écriture pour tout le monde (à adapter pour l'admin)
    }
    // Ajoutez d'autres règles pour d'autres collections si nécessaire
  }
}